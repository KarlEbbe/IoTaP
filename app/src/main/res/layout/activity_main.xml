<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.iotap.iotap.Activities.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btnConnectSensor"
        android:layout_width="165dp"
        android:layout_height="76dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Connect to motion sensor"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"/>

    <Button
        android:id="@+id/btnGreet"
        android:layout_width="165dp"
        android:layout_height="76dp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="Handshake"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="16dp"/>

    <TextView
        android:id="@+id/twProxIdlbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ProxID:"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="239dp"/>

    <TextView
        android:id="@+id/twProxId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/twProxIdlbl"
        app:layout_constraintTop_toBottomOf="@+id/btnGreet" />

    <TextView
        android:id="@+id/twGesturelbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gesture:"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="144dp"/>

</android.support.constraint.ConstraintLayout>